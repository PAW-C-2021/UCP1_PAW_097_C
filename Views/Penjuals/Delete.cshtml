@model UCP1_PAW_097_C.Models.Penjual

@{
    ViewData["Title"] = "Delete";
}

<h1>Hapus Data</h1>

<h3>Apakah anda yakin ingin menghapus data ini?</h3>
<div>
    <h4>Data Penjual</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nama Penjual")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamaPenjual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Email")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailPenjual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Alamat")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlamatPenjual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Nomor Ponsel")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoHpPenjual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Tentang")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TentangPenjual)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Judul Tanah")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTanahNavigation.JudulTanah)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPenjual" />
        <input type="submit" value="Hapus" class="btn btn-danger" />
        <a class="btn btn-outline-success" asp-action="Index">Kembali</a>
    </form>
</div>

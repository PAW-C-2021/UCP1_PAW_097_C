@model UCP1_PAW_097_C.Models.Penjual

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Data Penjual</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPenjual" />
            <div class="form-group">
                <label asp-for="NamaPenjual" class="control-label">Nama Penjual</label>
                <input asp-for="NamaPenjual" class="form-control" />
                <span asp-validation-for="NamaPenjual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailPenjual" class="control-label">Email</label>
                <input asp-for="EmailPenjual" class="form-control" />
                <span asp-validation-for="EmailPenjual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlamatPenjual" class="control-label">Alamat</label>
                <textarea asp-for="AlamatPenjual" class="form-control" rows="3"></textarea>
                <span asp-validation-for="AlamatPenjual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoHpPenjual" class="control-label">Nomor Ponsel</label>
                <input asp-for="NoHpPenjual" class="form-control" />
                <span asp-validation-for="NoHpPenjual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TentangPenjual" class="control-label">Tentang</label>
                <textarea asp-for="TentangPenjual" class="form-control" rows="3"></textarea>
                <span asp-validation-for="TentangPenjual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTanah" class="control-label">Id Tanah</label>
                <select asp-for="IdTanah" class="form-control" asp-items="ViewBag.IdTanah"></select>
                <span asp-validation-for="IdTanah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
                <a class="btn btn-outline-danger" asp-action="Index">Kembali</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

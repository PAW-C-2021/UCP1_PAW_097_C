@model IEnumerable<UCP1_PAW_097_C.Models.Pembeli>

@{
    ViewData["Title"] = "Index";
}

<h1>Data Pembeli</h1>

<p>
    <a class="btn btn-primary" role="button" asp-action="Create">Tambah Data</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Pembeli")
            </th>
            <th>
                @Html.DisplayName("Nomor Ponsel")
            </th>
            <th>
                @Html.DisplayName("Nomor Transaksi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPembeli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHpPembeli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTransaksiNavigation.IdTransaksi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPembeli"><i class="fas fa-user-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPembeli"><i class="fas fa-info-circle"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPembeli"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
